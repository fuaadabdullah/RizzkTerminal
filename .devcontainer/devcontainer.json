{
  "name": "rizzk-dev",
  "build": { "dockerfile": "Dockerfile" },
  "features": {},
  "postCreateCommand": "pip install -U pip && pip install -r /workspaces/rizzk/requirements.txt && pre-commit install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "mhutchie.git-graph",
        "yzhang.markdown-all-in-one",
        "GitHub.copilot",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" }
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/obsidian,target=/workspaces/rizzk/obsidian,type=bind"
  ]
}
